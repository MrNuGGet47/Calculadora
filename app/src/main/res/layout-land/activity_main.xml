<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d1b2a"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#415a77"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#778da9"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="312dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/button"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="7"
                android:text="7" />

            <Button
                android:id="@+id/button2"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="8"
                android:text="8" />

            <Button
                android:id="@+id/button3"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="9"
                android:text="9" />

            <Button
                android:id="@+id/divButton"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/button5"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="4"
                android:text="4" />

            <Button
                android:id="@+id/button6"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="5"
                android:text="5" />

            <Button
                android:id="@+id/button7"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="6"
                android:text="6" />

            <Button
                android:id="@+id/multButton"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/button9"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="1"
                android:text="1" />

            <Button
                android:id="@+id/button10"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="2"
                android:text="2" />

            <Button
                android:id="@+id/button11"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="3"
                android:text="3" />

            <Button
                android:id="@+id/restButton"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/pointButton"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:tag="0."
                android:text="." />

            <Button
                android:id="@+id/button14"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:onClick="onClick"
                android:tag="0"
                android:text="0" />

            <Button
                android:id="@+id/resolve"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:text="=" />

            <Button
                android:id="@+id/sumButton"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:backgroundTint="#415a77"
                android:text="+" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/clear"
        android:layout_width="237dp"
        android:layout_height="81dp"
        android:backgroundTint="#415a77"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/showOpt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <CheckBox
        android:id="@+id/showOpt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#1b263b"
        android:buttonTint="#e0e1dd"
        android:text="Mostrar Opciones Deshabilitar"
        android:textColor="#e0e1dd"
        android:textColorLink="#1b263b"
        app:layout_constraintBottom_toTopOf="@+id/disOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <RadioGroup
        android:id="@+id/disOptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showOpt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/showOpt"
        app:layout_constraintTop_toBottomOf="@+id/showOpt">

        <RadioButton
            android:id="@+id/hideDiv"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#e0e1dd"
            android:text="Division"
            android:textColor="#e0e1dd" />

        <RadioButton
            android:id="@+id/hideMult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#e0e1dd"
            android:text="Multiplicacion"
            android:textColor="#e0e1dd" />

        <RadioButton
            android:id="@+id/hideRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#e0e1dd"
            android:text="Resta"
            android:textColor="#e0e1dd" />

        <RadioButton
            android:id="@+id/hideSum"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:buttonTint="#e0e1dd"
            android:text="Suma"
            android:textColor="#e0e1dd" />

    </RadioGroup>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#415a77"
        android:text="←"
        app:layout_constraintBottom_toBottomOf="@+id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/clear" />

</androidx.constraintlayout.widget.ConstraintLayout>